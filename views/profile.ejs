<!doctype html>
<html>
<head>
    <title>Inventory</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Kanit:wght@200&display=swap" rel="stylesheet">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-list"></span>Stock Solutions</h1>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> User:</h3>
                <p>Add inventory items to your list with the quantity in stock, items low in stock will be flagged for high priority.</p>
                     <p>
                        <strong>email</strong>: <%= user.local.email %><br>
                    </p>
                <a href="/logout" class="btn btn-default btn-sm">Logout</a>
            </div>
        </div>
        <div class="col-sm-6">
          <p class="subhead">Add items:</p>
          <form action="/messages" method="POST">
            <input type="text" placeholder="product name" name="name">
            <input type="number" placeholder="quantity" name="quantity">
            <button type="submit">Submit</button>
          </form>
          <p class="subhead">Low in stock:</p>
          <ul class='lowQuantity' >
            <% for(var i=0; i<lowQuantity.length; i++) {%>
              <li class="lowQuantity">
                <span><%= lowQuantity[i].name %></span>
                <span class='<%= lowQuantity[i].quantity < 3 ? "alert" : "" %>'><%= lowQuantity[i].quantity %></span>
                <span><i class="fa fa-trash" aria-hidden="true"></i></span>
                
              </li>
            <% } %>
            </ul>
          <p class="subhead">Item:</p>
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <span><%= messages[i].name %></span>
              <span><%= messages[i].quantity %></span>
              <input type="number" name="amount" placeholder="update quantity">
              <span><i class="fa fa-check" aria-hidden="true"></i></span>
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
            </li>
          <% } %>
          </ul>
      </div>  
</div>

<script src="main.js"></script>

</body>
</html>
